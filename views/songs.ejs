<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Browse Songs - Jolly Beats</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% if (achievement) { %>
    <div class="achievement-notification" id="achievementNotif">
      <div class="achievement-content">
        <strong>Achievement Unlocked!</strong>
        <p><%= achievement %></p>
      </div>
    </div>
    <script>
      setTimeout(() => {
        document.getElementById('achievementNotif').classList.add('show');
      }, 500);
      setTimeout(() => {
        document.getElementById('achievementNotif').classList.remove('show');
      }, 5000);
    </script>
  <% } %>
  <div class="container">
    <header>
      <h1><a href="/">Jolly Beats</a></h1>
      <nav>
        <a href="/songs">My Songs</a>
        <a href="/songs/browse">Browse All</a>
        <a href="/playlists">Playlists</a>
        <a href="/forum">Forum</a>
        <a href="/profile">Profile</a>
        <a href="/logout" class="btn-logout">Logout (<%= user.username %>)</a>
      </nav>
    </header>

    <main class="content">
      <div class="page-header">
        <h2>My Songs</h2>
        <p>Manage your uploaded music</p>
        <a href="/songs/upload" class="btn btn-primary">Upload New Song</a>
      </div>

      <!-- Search Form -->
      <div class="search-box">
        <form action="/songs" method="GET" class="search-form">
          <input type="text" name="search" placeholder="Search by title, artist, or album..." value="<%= search %>">
          <input type="text" name="genre" placeholder="Genre" value="<%= genre %>">
          <input type="text" name="artist" placeholder="Artist" value="<%= artist %>">
          <button type="submit" class="btn btn-secondary">Search</button>
          <a href="/songs" class="btn btn-secondary">Clear</a>
        </form>
      </div>

      <p style="margin-bottom: 20px; color: #666;">Showing your uploaded songs only</p>

      <!-- Songs List -->
      <div class="songs-list">
        <% if (songs.length === 0) { %>
          <p class="no-data">No songs found. Be the first to upload!</p>
        <% } else { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Album</th>
                <th>Genre</th>
                <th>Year</th>
                <th>Uploaded By</th>
                <th>Play</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% songs.forEach(song => { %>
                <tr>
                  <td><%= song.title %></td>
                  <td><%= song.artist %></td>
                  <td><%= song.album || '-' %></td>
                  <td><%= song.genre || '-' %></td>
                  <td><%= song.year || '-' %></td>
                  <td><%= song.uploadedBy.displayName || song.uploadedBy.username %></td>
                  <td>
                    <audio controls>
                      <source src="/songs/stream/<%= song.filename %>" type="audio/mpeg">
                      Your browser does not support audio playback.
                    </audio>
                  </td>
                  <td class="actions">
                    <a href="/songs/edit/<%= song._id %>" class="btn-small">Edit</a>
                    <form action="/songs/delete/<%= song._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this song?');">
                      <button type="submit" class="btn-small btn-danger">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 Jolly Beats</p>
    </footer>
  </div>
</body>
</html>

