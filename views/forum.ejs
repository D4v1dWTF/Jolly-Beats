<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forum - Jolly Beats</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <% if (achievement) { %>
    <% const achievementParts = achievement.split('|'); %>
    <div class="achievement-notification" id="achievementNotif">
      <div class="achievement-content">
        <strong>Achievement Unlocked!</strong>
        <p class="achievement-title"><%= achievementParts[0] %></p>
        <% if (achievementParts[1]) { %>
          <small class="achievement-desc"><%= achievementParts[1] %></small>
        <% } %>
      </div>
    </div>
    <script>
      setTimeout(() => {
        document.getElementById('achievementNotif').classList.add('show');
      }, 500);
      setTimeout(() => {
        document.getElementById('achievementNotif').classList.remove('show');
      }, 5000);
    </script>
  <% } %>
  <div class="container">
    <header>
      <button class="font-size-toggle" onclick="toggleFontSize()">
        <span class="size-a" id="sizeSmall">A</span>
        <span class="size-a" id="sizeNormal">A</span>
        <span class="size-a" id="sizeLarge">A</span>
      </button>
      <h1><a href="/">Jolly Beats</a></h1>
      <nav>
        <a href="/songs">My Songs</a>
        <a href="/songs/browse">World</a>
        <a href="/playlists">Playlists</a>
        <a href="/forum">Forum</a>
        <a href="/profile">Profile</a>
        <a href="/logout" class="btn-logout">Logout (<%= user.username %>)</a>
      </nav>
    </header>

    <main class="content">
      <div class="page-header">
        <h2>Music Forum</h2>
        <p>Share your thoughts, recommendations, and discuss music with others!</p>
      </div>

      <!-- Create Post Form -->
      <div class="create-post-box">
        <h3>Create a Post</h3>
        
        <% if (error) { %>
          <div class="error-message"><%= error %></div>
        <% } %>

        <form action="/forum/create" method="POST" class="form">
          <div class="form-group">
            <label for="content">Your Message: *</label>
            <textarea id="content" name="content" rows="4" required maxlength="500" placeholder="What's on your mind about music?"></textarea>
            <small>Maximum 500 characters</small>
          </div>

          <div class="form-group">
            <label for="songId">Related Song (optional):</label>
            <select id="songId" name="songId">
              <option value="">No related song</option>
              <% songs.forEach(song => { %>
                <option value="<%= song._id %>"><%= song.title %> - <%= song.artist %></option>
              <% }); %>
            </select>
          </div>

          <button type="submit" class="btn btn-primary">Post</button>
        </form>
      </div>

      <!-- Posts List -->
      <div class="posts-section">
        <h3>Recent Posts</h3>
        
        <% if (posts.length === 0) { %>
          <p class="no-data">No posts yet. Be the first to share your thoughts!</p>
        <% } else { %>
          <div class="posts-list">
            <% posts.forEach(post => { %>
              <div class="post-card">
                <div class="post-header">
                  <span class="post-author"><%= post.author.displayName || post.author.username %></span>
                  <span class="post-date"><%= new Date(post.createdAt).toLocaleString() %></span>
                </div>
                
                <div class="post-content">
                  <p><%= post.content %></p>
                  
                  <% if (post.song) { %>
                    <div class="post-song-ref">
                      Related to: <strong><%= post.song.title %></strong> by <%= post.song.artist %>
                    </div>
                  <% } %>
                </div>
                
                <div class="post-interactions">
                  <% if (post.author._id.toString() !== user.id) { %>
                    <form action="/forum/like/<%= post._id %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn-interaction <%= post.likes.some(like => like._id.toString() === user.id) ? 'liked' : '' %>">
                        Like (<%= post.likes.length %>)
                      </button>
                    </form>
                  <% } else { %>
                    <span class="btn-interaction disabled">Like (<%= post.likes.length %>)</span>
                  <% } %>
                  
                  <button class="btn-interaction" onclick="toggleReplyForm('<%= post._id %>')">
                    Reply (<%= post.replies.length %>)
                  </button>
                  
                  <% if (post.author._id.toString() === user.id) { %>
                    <form action="/forum/delete/<%= post._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this post?');">
                      <button type="submit" class="btn-small btn-danger">Delete</button>
                    </form>
                  <% } %>
                </div>

                <% if (post.replies.length > 0) { %>
                  <div class="replies-section">
                    <h4>Replies:</h4>
                    <% post.replies.forEach(reply => { %>
                      <div class="reply-item">
                        <strong><%= reply.author.displayName || reply.author.username %></strong>
                        <span class="reply-date"><%= new Date(reply.createdAt).toLocaleString() %></span>
                        <p><%= reply.content %></p>
                      </div>
                    <% }); %>
                  </div>
                <% } %>

                <div class="reply-form" id="reply-form-<%= post._id %>" style="display:none;">
                  <form action="/forum/reply/<%= post._id %>" method="POST">
                    <textarea name="content" placeholder="Write a reply... (max 300 characters)" maxlength="300" required></textarea>
                    <div class="form-buttons">
                      <button type="submit" class="btn btn-primary">Submit Reply</button>
                      <button type="button" class="btn btn-secondary" onclick="toggleReplyForm('<%= post._id %>')">Cancel</button>
                    </div>
                  </form>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 Jolly Beats</p>
    </footer>
  </div>

  <script src="/js/fontsize.js"></script>
  <script>
    function toggleReplyForm(postId) {
      const form = document.getElementById('reply-form-' + postId);
      if (form.style.display === 'none') {
        form.style.display = 'block';
      } else {
        form.style.display = 'none';
      }
    }
  </script>
</body>
</html>

